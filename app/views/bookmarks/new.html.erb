<div class="container">
  <h1>Add a bookmark to <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.input :movie, collection: @movies %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

  <hr/>
  <%= link_to "Back list", list_path(@list.id), class: "btn btn-primary mt-3" %>
</div>