<div class="container">
  <h1>All lists</h1>

  <ul class="list-group my-5">
    <% @lists.each do |list| %>
      <li class="list-group-item mb-2 d-flex justify-content-between align-items-center">
        <%= list.name %>

        <div>
          <%= link_to "Info", list_path(list.id), class: "btn btn-primary" %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to "New list", new_list_path, class: "btn btn-primary" %>
</div>